<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF353740">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <materialDesign:ColorZone  Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Background="#2A2D35" Height="63" Margin="0,0,0.333,0" Grid.RowSpan="2">


        </materialDesign:ColorZone>
        <Grid HorizontalAlignment="Stretch" Grid.Row="1" Background="#2A2D35">
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Content="Loge out" HorizontalAlignment="Left" Margin="0,188,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180"/>
            <Button Content="boit reception" HorizontalAlignment="Left" Margin="0,130,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" Margin="0,0,0.333,-0.333">
            <Button Content="Affiché les absences" HorizontalAlignment="Left" Margin="383,96,0,0" VerticalAlignment="Top" Width="180" Click="Button_Click"/>
            <DataGrid CanUserAddRows="False" AutoGenerateColumns="False"  x:Name="dg" HorizontalAlignment="Left" Margin="10,180,0,29" Width="593" Loaded="DataGrid_Loaded" Background="#FF2A2D35" BorderBrush="#FF06070A" Foreground="#DDFBF6F6" HorizontalGridLinesBrush="#DD161515" OpacityMask="#FF353740" VerticalGridLinesBrush="#DD050505" HeadersVisibility="All" IsTextSearchEnabled="True" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding [Full Name]}" />
                    <DataGridTextColumn Header="Date" Binding="{Binding [Date]}"  />
                    <DataGridTextColumn Header="Description" Binding="{Binding [Decription]}"  />
                    <DataGridTextColumn Header="Class Name"  Binding="{Binding [Class Name]}" />
                    <DataGridCheckBoxColumn Header="IsJustified" Binding="{Binding [IsJustified]}" />
                    <DataGridTemplateColumn Width="125" x:Name="action" Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate >
                                <Button x:Name="Send" Content="Send" Width="80" Background="#FF2196F3" BorderBrush="{x:Null}" Click="Button_Click_2" Foreground="White" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

            <ComboBox x:Name="combo_class" HorizontalAlignment="Left" Margin="84,100,0,0" VerticalAlignment="Top" Width="147" Background="#FF2196F3" SelectionChanged="ComboBox_SelectionChanged">

            </ComboBox>


        </Grid>

    </Grid>
</Window>